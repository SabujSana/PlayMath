<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="#00fff2"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_tulona"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"

                android:text="তুলনা"
                android:textColor="#0000ff"
                android:textSize="35dp" />


            <Button
                android:id="@+id/btn_gonona"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:text="গণনা"

                android:textColor="#0000ff"
                android:textSize="35dp" />

            <Button
                android:id="@+id/btn_jog"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:text="যোগ"

                android:textColor="#0000ff"
                android:textSize="35dp" />

            <Button
                android:id="@+id/btn_nijaKori"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:text="অঙ্কে  লিখি"

                android:textColor="#0000ff"
                android:textSize="35dp" />

            <Button
                android:id="@+id/btn_notePoriciti"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:text="বাংলাদেশি মুদ্রা ও নোট"

                android:textColor="#0000ff"
                android:textSize="30dp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>