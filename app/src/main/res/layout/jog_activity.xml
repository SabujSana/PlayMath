<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#55ff33"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"

                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                     />


                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_weight="1"
                     />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                 />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:layout_marginLeft="7px"
                android:layout_marginRight="7px"
                android:layout_marginTop="5px">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                     />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                  />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                  />


                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_weight="1"
                   />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                 />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:layout_marginTop="10dp"
                android:layout_marginLeft="7px"
                android:layout_marginRight="7px">

                <ImageView
                    android:id="@+id/iv_left_number"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                     />
                <ImageView
                    android:id="@+id/iv_left_blank"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@drawable/blank"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/iv_sign"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                   />

                <ImageView
                    android:id="@+id/iv_left_Right"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@drawable/blank"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:id="@+id/iv_right_number"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/iv_blankLeft"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:layout_weight="1"
                    android:background="@drawable/blank" />

                <ImageView
                    android:id="@+id/iv_equal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:layout_weight="1"
                    />

                <ImageView
                    android:id="@+id/iv_blankRight"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:layout_weight="1"
                    android:background="@drawable/blank" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                >

                <ImageButton
                    android:id="@+id/ib_left"
                    android:layout_width="match_parent"
                    android:layout_height="65px"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginLeft="7px"
                    android:layout_marginRight="7px"
                    android:layout_weight="1"
                    android:onClick="Left" />

                <ImageButton
                    android:id="@+id/ib_center"
                    android:layout_width="match_parent"
                    android:layout_height="65px"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginLeft="7px"
                    android:layout_marginRight="7px"
                    android:layout_weight="1"
                    android:onClick="Center" />

                <ImageButton
                    android:id="@+id/ib_right"
                    android:layout_width="match_parent"
                    android:layout_height="65px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10px"
                    android:layout_marginLeft="7px"
                    android:layout_marginRight="7px"
                    android:layout_weight="1"
                    android:onClick="Right" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>