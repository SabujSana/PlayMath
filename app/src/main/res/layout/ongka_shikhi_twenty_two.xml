<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000ff"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="মোট  কয়টি  ঘর  আছে ?"
        android:id="@+id/tv_twentyTwo"
        android:textAlignment="center"
        android:textColor="#ff0000"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:id="@+id/iv_twentyTwo"
        android:src="@drawable/twentytwo"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:id="@+id/ib_left"
        android:background="@drawable/pocis"
        android:layout_marginRight="5dp"
        android:layout_gravity="center_horizontal"
        />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:id="@+id/ib_center"
        android:background="@drawable/twnttwo"
        android:layout_gravity="center_horizontal"
        />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:id="@+id/ib_right"
        android:background="@drawable/tayes"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_horizontal"
        />
    </LinearLayout>

</LinearLayout>